  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/src/index.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Local Nodemon",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "watch"],
      "restart": true,
      "port": 5858,
      "protocol": "inspector"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Docker Nodemon",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "docker"],
      "restart": true,
      "port": 5858,
      "protocol": "inspector",
      "remoteRoot": "/app"
    }
  ]
}
